<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>CRUD Operations</title>
</head>

<body>

  <h2>Student Details</h2>

  <a href="/create" class="btn btn-warning mt-3">Create New Item</a>


  <table class="table table-info table-striped mt-3">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="2">Actions</th>

    </tr>
    <% for(let item of details ) { %>
      <tr>
        <td>
          <%= item.stid %>
        </td>
        <td>
          <%= item.name %>
        </td>
        <td>
          <%= item.email %>
        </td>
        <td>
          <a href="/edit/<%= item.id %>" class="btn btn-info ">Edit</a>
        </td>
        <td>
          <form action="/delete/<%= item.id %>" method="post" style="display: inline;">
            <button type="submit" class="btn btn-info ">Delete</button>
          </form>
        </td>
      </tr>
      <% }; %>
  </table>
</body>

</html>