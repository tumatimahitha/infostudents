<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>Edit Item</title>
</head>

<body>
  <div class="row">
    <div class="col-8 offset-2 mt-3">
      <h1>Edit Item </h1>
      
      <form method="POST" action="/update/<%=details.id %>?_method=PUT" >
        <div class="mb-3">
          <label class="form-label" for="name">Name:</label>
          <input class="form-control" type="text" id="name" name="name" value="<%= details.name %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label" for="email">Email:</label>
          <input class="form-control" type="email" id="email" name="email" value="<%=details.email %>" required>

        </div>

        <button type="submit" class="mb-3 btn btn-primary">Update Item</button>
      </form>
      <a href="/" class="btn btn-secondary">Back to List</a>
</body>
</div>
</div>

</html>